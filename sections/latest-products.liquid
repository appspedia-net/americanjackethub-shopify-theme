{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mb }}px;
    padding-bottom: {{ section.settings.padding_bottom_mb }}px;
  }

  .section-{{ section.id }}-padding .collection__title {
    margin-bottom: {{ section.settings.margin_heading_section_mb }}px;
    color: {{ section.settings.heading_color }};
    border-bottom: 1px solid {{ section.settings.border_color }};
    padding: 7px 0;
    {%- if section.settings.hide_heading -%}
      display: none!important;
    {%- endif -%}
  }

  .section-{{ section.id }}-padding h2.heading {
    font-size: {{ section.settings.heading_size_mb }}px;
    font-weight: {{ section.settings.heading_weight }};
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .section-{{ section.id }}-padding .collection__title {
      margin-bottom: {{ section.settings.margin_heading_section }}px;
    }
    .section-{{ section.id }}-padding h2.heading {
      font-size: {{ section.settings.heading_size }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}">
  <div class="page-width">
    {%- unless section.settings.hide_heading -%}
      <div class="collection__title">
        <h2 class="heading">{{ section.settings.title }}</h2>
      </div>
    {%- endunless -%}

    {%- if section.settings.collection != blank -%}
      <ul
        class="grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_tablet }}-col-tablet grid--{{ section.settings.columns_mobile }}-col-mobile"
        role="list"
      >
        {%- assign latest_products = section.settings.collection.products | sort: 'created_at' | reverse -%}
        {%- for product in latest_products limit: section.settings.products_to_show -%}
          <li
            class="grid__item before__loading {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            {% if settings.animations_reveal_on_scroll %}
              data-cascade
            {% endif %}
          >
            {% render 'card-product',
              card_product: product,
              media_aspect_ratio: section.settings.image_ratio,
              image_shape: section.settings.image_shape,
              show_secondary_image: section.settings.show_secondary_image,
              show_vendor: section.settings.show_vendor,
              show_rating: section.settings.show_rating,
              columns_desktop: section.settings.columns_desktop,
              columns_tablet: section.settings.columns_tablet,
              columns_mobile: section.settings.columns_mobile
            %}
          </li>
        {%- endfor -%}
      </ul>
    {%- else -%}
      <div class="page-width">
        <p style="text-align: center; padding: 40px 0;">Please select a collection to display latest products.</p>
      </div>
    {%- endif -%}
  </div>
</div>


{{ 'section-rich-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top_mb }}px;
      padding-bottom: {{ section.settings.padding_bottom_mb }}px;
      {%- if section.settings.background_image != blank -%}
        background-position: 50%;
        background-repeat: no-repeat;
        background-size: contain;
        background-attachment: initial;
      {%- endif -%}
    }
  {%- if section.settings.full_width_box -%}
    .section-{{ section.id }}-padding  .rich-text__blocks{
      max-width:100%;
    }
  {%- endif -%}
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="isolate{% unless section.settings.full_width %} page-width{% endunless %}">
  <div class="rich-text content-container color-{{ section.settings.color_scheme }} gradient{% if section.settings.full_width %} rich-text--full-width content-container--full-width{% endif %} section-{{ section.id }}-padding"
  {%- if section.settings.background_image != blank -%}
    style=" background-image: url({{section.settings.background_image | image_url: width: 3840}})"
  {%- endif -%}
  >
    <div class="rich-text__wrapper rich-text__wrapper--{{ section.settings.desktop_content_position }}{% if section.settings.full_width %} page-width{% endif %}">
      <div class="rich-text__blocks {{ section.settings.content_alignment }}">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'heading' -%}
              <h2
                class="rich-text__heading rte inline-richtext {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
                style="--animation-order: {{ forloop.index }}; --font-weight: {{block.settings.heading_weight}}; --font-size: {{block.settings.heading_size}}px; --font-size-mb: {{block.settings.heading_size_mb}}px; --margin-bottom: {{block.settings.margin_heading_bottom}}px; --margin-bottom-mb: {{block.settings.margin_heading_bottom_mb}}px;"
              >
                {{ block.settings.heading }}
              </h2>
            {%- when 'text' -%}
              <div
                class="rich-text__text rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
                style="--animation-order: {{ forloop.index }}; --font-size:{{block.settings.richtext_size}}px; --font-size-mb:{{block.settings.richtext_size_mb}}px; --margin-bottom: {{block.settings.margin_richtext_bottom}}px; --margin-bottom-mb: {{block.settings.margin_richtext_bottom_mb}}px;"
              >
                {{ block.settings.text }}
              </div>
            {%- when 'button' -%}
              <div
                class="rich-text__buttons{% if block.settings.button_label != blank and block.settings.button_label_2 != blank %} rich-text__buttons--multiple{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
                {% if settings.animations_reveal_on_scroll %}
                  data-cascade
                {% endif %}
                style="--animation-order: {{ forloop.index }}; --margin-bottom:{{block.settings.button_margin_bottom}}px; --margin-bottom-mb:{{block.settings.button_margin_bottom}}px;"
              >
                {%- if block.settings.button_label != blank -%}
                  <a
                    {% if block.settings.button_link == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.button_link }}"
                    {% endif %}
                    class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                    style="--font-size:{{block.settings.button_font_size}}px; --font-size-mb:{{block.settings.button_font_size_mb}}px;"
                  > 
                    {%- if block.settings.first_button_icon != blank -%}
                      <span class="button_icon">
                        <img
                        src="{{ block.settings.first_button_icon | image_url }}"
                        {% if block.settings.first_button_icon.alt != blank %}
                          alt="{{ block.settings.first_button_icon.alt | escape }}"
                        {% else %}
                          role="presentation"
                        {% endif %}
                        height="auto"
                        width="auto"
                        loading="lazy"
                      >
                      </span>
                    {%- endif -%}
                    <span class="text">{{- block.settings.button_label | escape -}}</span>
                  </a>
                {%- endif -%}
                {%- if block.settings.button_label_2 != blank -%}
                  <a
                    {% if block.settings.button_link_2 == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.button_link_2 }}"
                    {% endif %}
                    class="button{% if block.settings.button_style_secondary_2 %} button--secondary{% else %} button--primary{% endif %}"
                    style="--font-size:{{block.settings.button_font_size}}px; --font-size-mb:{{block.settings.button_font_size_mb}}px;"
                  >
                    {%- if block.settings.second_button_icon != blank -%}
                      <span class="button_icon">
                        <img
                        src="{{ block.settings.second_button_icon | image_url }}"
                        {% if block.settings.second_button_icon.alt != blank %}
                          alt="{{ block.settings.second_button_icon.alt | escape }}"
                        {% else %}
                          role="presentation"
                        {% endif %}
                        height="auto"
                        width="auto"
                        loading="lazy"
                      >
                      </span>
                    {%- endif -%}
                    <span class="text">{{- block.settings.button_label_2 | escape -}}</span>
                  </a>
                {%- endif -%}
                {%- if block.settings.button_label_3 != blank -%}
                  <a
                    {% if block.settings.button_link_3 == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.button_link_3 }}"
                    {% endif %}
                    class="button{% if block.settings.button_style_secondary_3 %} button--secondary{% else %} button--primary{% endif %}"
                    style="--font-size:{{block.settings.button_font_size}}px; --font-size-mb:{{block.settings.button_font_size_mb}}px;"
                  >
                    {%- if block.settings.tertiary_button_icon != blank -%}
                      <span class="button_icon">
                        <img
                        src="{{ block.settings.tertiary_button_icon | image_url }}"
                        {% if block.settings.tertiary_button_icon.alt != blank %}
                          alt="{{ block.settings.tertiary_button_icon.alt | escape }}"
                        {% else %}
                          role="presentation"
                        {% endif %}
                        height="auto"
                        width="auto"
                        loading="lazy"
                      >
                      </span>
                    {%- endif -%}
                    <span class="text">{{- block.settings.button_label_3 | escape -}}</span>
                  </a>
                {%- endif -%}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.rich-text.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer", "custom.extension"]
  },
  "settings": [
    {
      "type": "select",
      "id": "desktop_content_position",
      "options": [
        {
          "value": "left",
          "label": "t:sections.rich-text.settings.desktop_content_position.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.rich-text.settings.desktop_content_position.options__2.label"
        },
        {
          "value": "right",
          "label": "t:sections.rich-text.settings.desktop_content_position.options__3.label"
        }
      ],
      "default": "center",
      "label": "t:sections.rich-text.settings.desktop_content_position.label",
      "info": "t:sections.rich-text.settings.desktop_content_position.info"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "options": [
        {
          "value": "left",
          "label": "t:sections.rich-text.settings.content_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.rich-text.settings.content_alignment.options__2.label"
        },
        {
          "value": "right",
          "label": "t:sections.rich-text.settings.content_alignment.options__3.label"
        }
      ],
      "default": "center",
      "label": "t:sections.rich-text.settings.content_alignment.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": true,
      "label": "t:sections.rich-text.settings.full_width.label"
    },
    {
      "type": "checkbox",
      "id": "full_width_box",
      "default": false,
      "label": "Make box content full width"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_top_mb",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top on Mobile",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom_mb",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom on Mobile",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "t:sections.rich-text.blocks.heading.name",
      "limit": 3,
      "settings": [
        {
          "type": "textarea",
          "id": "heading",
          "default": "Talk about your brand",
          "label": "t:sections.rich-text.blocks.heading.settings.heading.label"
        },
        {
          "type": "select",
          "id": "heading_weight",
          "label": "Font weight sub heading",
          "options": [
            {
              "value": "300",
              "label": "300"
            },
            {
              "value": "400",
              "label": "400"
            },
            {
              "value": "500",
              "label": "500"
            },
            {
              "value": "600",
              "label": "600"
            },
            {
              "value": "700",
              "label": "700"
            },
            {
              "value": "800",
              "label": "800"
            },
            {
              "value": "900",
              "label": "900"
            }
          ],
          "default": "600"
        },
        {
          "type": "range",
          "id": "heading_size",
          "label": "Font size heading",
          "min": 10,
          "max": 100,
          "step": 1,
          "default": 28,
          "unit": "px"
        },
        {
          "type": "range",
          "id": "margin_heading_bottom",
          "label": "Margin heading",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 10,
          "unit": "px"
        },
        {
          "type": "range",
          "id": "heading_size_mb",
          "label": "Font size heading mobile",
          "min": 10,
          "max": 100,
          "step": 1,
          "default": 28,
          "unit": "px"
        },
        {
          "type": "range",
          "id": "margin_heading_bottom_mb",
          "label": "Margin heading mobile",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 10,
          "unit": "px"
        }
      ]
    },
    {
      "type": "text",
      "name": "t:sections.rich-text.blocks.text.name",
      "limit": 3,
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "default": "Share information about your brand with your customers. Describe a product, make announcements, or welcome customers to your store.",
          "label": "t:sections.rich-text.blocks.text.settings.text.label"
        },
        {
          "type": "range",
          "id": "richtext_size",
          "label": "Font size",
          "min": 10,
          "max": 100,
          "step": 1,
          "default": 16,
          "unit": "px"
        },
        {
          "type": "range",
          "id": "margin_richtext_bottom",
          "label": "Margin Bottom",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 10,
          "unit": "px"
        },
        {
          "type": "range",
          "id": "richtext_size_mb",
          "label": "Font size mobile",
          "min": 10,
          "max": 100,
          "step": 1,
          "default": 16,
          "unit": "px"
        },
        {
          "type": "range",
          "id": "margin_richtext_bottom_mb",
          "label": "Margin Bottom mobile",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 10,
          "unit": "px"
        }
      ]
    },
    {
      "type": "button",
      "name": "t:sections.rich-text.blocks.buttons.name",
      "limit": 2,
      "settings": [
        {
          "type": "image_picker",
          "id": "first_button_icon",
          "label": "First Button icon"
        },
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "t:sections.rich-text.blocks.buttons.settings.button_label_1.label",
          "info": "t:sections.rich-text.blocks.buttons.settings.button_label_1.info"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "t:sections.rich-text.blocks.buttons.settings.button_link_1.label"
        },
        {
          "type": "checkbox",
          "id": "button_style_secondary",
          "default": false,
          "label": "t:sections.rich-text.blocks.buttons.settings.button_style_secondary_1.label"
        },
        {
          "type": "image_picker",
          "id": "second_button_icon",
          "label": "Second Button icon"
        },
        {
          "type": "text",
          "id": "button_label_2",
          "label": "t:sections.rich-text.blocks.buttons.settings.button_label_2.label",
          "info": "t:sections.rich-text.blocks.buttons.settings.button_label_2.info"
        },
        {
          "type": "url",
          "id": "button_link_2",
          "label": "t:sections.rich-text.blocks.buttons.settings.button_link_2.label"
        },
        {
          "type": "checkbox",
          "id": "button_style_secondary_2",
          "default": false,
          "label": "t:sections.rich-text.blocks.buttons.settings.button_style_secondary_2.label"
        },
        {
          "type": "image_picker",
          "id": "tertiary_button_icon",
          "label": "Tertiary Button icon"
        },
        {
          "type": "text",
          "id": "button_label_3",
          "label": "t:sections.rich-text.blocks.buttons.settings.button_label_3.label",
          "info": "t:sections.rich-text.blocks.buttons.settings.button_label_3.info"
        },
        {
          "type": "url",
          "id": "button_link_3",
          "label": "t:sections.rich-text.blocks.buttons.settings.button_link_3.label"
        },
        {
          "type": "checkbox",
          "id": "button_style_secondary_3",
          "default": false,
          "label": "t:sections.rich-text.blocks.buttons.settings.button_style_secondary_3.label"
        },
        {
          "type": "range",
          "id": "button_font_size",
          "label": "Font size",
          "min": 10,
          "max": 100,
          "step": 1,
          "default": 16,
          "unit": "px"
        },
        {
          "type": "range",
          "id": "button_margin_bottom",
          "label": "Margin Bottom",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 0,
          "unit": "px"
        },
        {
          "type": "range",
          "id": "button_font_size_mb",
          "label": "Font size mobile",
          "min": 10,
          "max": 100,
          "step": 1,
          "default": 14,
          "unit": "px"
        },
        {
          "type": "range",
          "id": "button_margin_bottom_mb",
          "label": "Margin Bottom mobile",
          "min": 0,
          "max": 100,
          "step": 1,
          "default": 0,
          "unit": "px"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.rich-text.presets.name",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        },
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}

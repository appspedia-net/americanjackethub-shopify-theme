{{ 'section-main-page.css' | asset_url | stylesheet_tag }}
{{ 'section-main-about.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mb }}px;
    padding-bottom: {{ section.settings.padding_bottom_mb }}px;
  }

  .section-{{ section.id }}-padding h2.heading {
    font-size: {{ section.settings.heading_size_mb }}px;
  }

  .section-{{ section.id }}-padding .sub_heading {
    font-size: {{ section.settings.subheading_size_mb }}px;
  }

  .section-{{ section.id }}-padding .about-content .rte {
    font-size: {{ section.settings.content_size }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px; 
    }
    .section-{{ section.id }}-padding h2.heading {
      font-size: {{ section.settings.heading_size }}px;
    }
    .section-{{ section.id }}-padding .sub_heading {
      font-size: {{ section.settings.subheading_size }}px;
    }
  }
{%- endstyle -%}

<div class="page-width section-{{ section.id }}-padding">
  <div class="about-wrapper">
    <div class="about-content">
        {%- if section.settings.heading != blank -%}
        <h2
            class="title heading inline-richtext{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          >
            {{ section.settings.heading }}
        </h2>
        {%- endif -%}
        {%- if section.settings.sub_heading != blank -%}
            <div
              class="sub_heading inline-richtext{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            >
              {{ section.settings.sub_heading }}
            </div>
        {%- endif -%}
        {%- if section.settings.content != blank -%}
            <div
              class="rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            >
              {{ section.settings.content }}
            </div>
          {%- endif -%}
    </div>
    </div>
</div>

{% schema %}
{
  "name": "Main about page",
  "tag": "section",
  "class": "section main-page-about",
  "settings": [
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading",
      "default": "<p>About the Medistore</p>"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Font size heading",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 28,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "heading_size_mb",
      "label": "Font size heading mobile",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 28,
      "unit": "px"
    },
    {
        "type": "richtext",
        "id": "sub_heading",
        "label": "Sub Heading",
        "default": "<p>“Your home medical provider now also online”</p>"
    },
    {
      "type": "range",
      "id": "subheading_size",
      "label": "Font size sub heading",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "subheading_size_mb",
      "label": "Font size sub heading on mobile",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 20,
      "unit": "px"
    },
    {
        "type": "richtext",
        "id": "content",
        "label": "Content"
    },
    {
      "type": "range",
      "id": "content_size",
      "label": "Font size content",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_top_mb",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top on Mobile",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom_mb",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom on Mobile",
      "default": 36
    }
  ]
}
{% endschema %}

{{ 'component-footer-top.css' | asset_url | stylesheet_tag }}
{{ 'component-newsletter.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .footer-top {
    background-color: rgba(var(--color-background),{{ section.settings.opacity_bg | divided_by: 100.0 }});
    {%- if section.settings.enable_custom_border -%}
      border: 1px solid rgb(var(--color-input-border));
      border-left: none;
      border-right: none;
    {%- endif -%}
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mb }}px;
    padding-bottom: {{ section.settings.padding_bottom_mb }}px;
  }

  .section-{{ section.id }}-padding .footer-block__heading {
    font-size: {{ section.settings.heading_size_mb }}px;
  }

  .section-{{ section.id }}-padding .footer-block__subheading {
    font-size: {{ section.settings.text_size_mb }}px;
  }

  {%- if section.settings.enable_custom_width -%}
    .section-{{ section.id }}-padding .page-width {
      max-width: {{ section.settings.custom_width }}px;
    }
  {%- endif -%}

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .section-{{ section.id }}-padding .footer-block__heading {
      font-size: {{ section.settings.heading_size }}px;
    }

    .section-{{ section.id }}-padding .footer-block__subheading {
      font-size: {{ section.settings.text_size }}px;
    }
  }
{%- endstyle -%}
<div class="footer-top color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="footer-top__wrapper {{ section.settings.text_align }}">
      {%- if section.settings.newsletter_enable -%}
        <div class="footer-block__newsletter">
          <div class="footer-block__header">
            {%- if section.settings.newsletter_heading != blank -%}
              <h2 class="footer-block__heading heading inline-richtext">{{ section.settings.newsletter_heading }}</h2>
            {%- endif -%}
            {%- if section.settings.content != blank -%}
              <div class="footer-block__subheading sub_heading">{{ section.settings.content }}</div>
            {%- endif -%}
          </div>
          {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter newsletter-form' -%}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="newsletter-form__field-wrapper" style="--buttons-size: {{ section.settings.button_height }}px;">
              <div class="field">
                <input
                  id="NewsletterForm--{{ section.id }}"
                  type="email"
                  name="contact[email]"
                  class="field__input"
                  value="{{ form.email }}"
                  aria-required="true"
                  autocorrect="off"
                  autocapitalize="off"
                  autocomplete="email"
                  {% if form.errors %}
                    autofocus
                    aria-invalid="true"
                    aria-describedby="ContactFooter-error"
                  {% elsif form.posted_successfully? %}
                    aria-describedby="ContactFooter-success"
                  {% endif %}
                  placeholder="{{ 'newsletter.label' | t }}"
                  required
                >
                <button
                  type="submit"
                  class="field__button button"
                  name="commit"
                  id="Subscribe"
                  aria-label="{{ 'newsletter.button_label' | t }}"
                  style="min-width: {{ section.settings.button_width }}px;"
                >
                    {{ 'newsletter.button_label' | t }}
                </button>
              </div>
              {%- if form.errors -%}
                <small class="newsletter-form__message form__message" id="ContactFooter-error">
                  {%- render 'icon-error' -%}
                  {{- form.errors.translated_fields.email | capitalize }}
                  {{ form.errors.messages.email -}}
                </small>
              {%- endif -%}
            </div>
            {%- if form.posted_successfully? -%}
              <h3
                class="newsletter-form__message newsletter-form__message--success form__message"
                id="ContactFooter-success"
                tabindex="-1"
                autofocus
              >
                {% render 'icon-success' -%}
                {{- 'newsletter.success' | t }}
              </h3>
            {%- endif -%}
          {%- endform -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Footer top",
  "enabled_on": {
    "groups": ["footer"]
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_custom_border",
      "label": "Enable Border",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_custom_width",
      "label": "Enable custom width",
      "default": false
    },
    {
      "type": "number",
      "id": "custom_width",
      "label": "Custom width",
      "default": 620
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
      "type": "range",
      "id": "opacity_bg",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Opacity background color",
      "default": 20
    },
    {
      "type": "header",
      "content": "t:sections.footer.settings.header__1.content",
      "info": "t:sections.footer.settings.header__1.info"
    },
    {
      "type": "checkbox",
      "id": "newsletter_enable",
      "default": true,
      "label": "t:sections.footer.settings.newsletter_enable.label"
    },
    {
      "type": "inline_richtext",
      "id": "newsletter_heading",
      "default": "Subscribe to our emails",
      "label": "t:sections.footer.settings.newsletter_heading.label"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Font size heading",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 28
    },
    {
      "type": "range",
      "id": "heading_size_mb",
      "label": "Font size heading mobile",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 28
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "range",
      "id": "text_size",
      "label": "Font size content",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 14
    },
    {
      "type": "range",
      "id": "text_size_mb",
      "label": "Font size content mobile",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 14
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text align",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Settings button"
    },
    {
      "type": "range",
      "id": "button_width",
      "label": "Button width",
      "min": 50,
      "max": 500,
      "step": 5,
      "default": 150,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "button_height",
      "label": "Button height",
      "min": 20,
      "max": 100,
      "step": 1,
      "default": 44,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_top_mb",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top on Mobile",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom_mb",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom on Mobile",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Footer top"
    }
  ]
}
{% endschema %}

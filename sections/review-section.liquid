{{ 'section-review.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mb }}px;
    padding-bottom: {{ section.settings.padding_bottom_mb }}px;
  }

  .section-{{ section.id }}-padding .title-wrapper-with-link {
    margin-bottom: {{ section.settings.margin_heading_section_mb }}px;
  }
  .section-{{ section.id }}-padding .title-wrapper-with-link h2 {
    font-size: {{ section.settings.heading_size_mb }}px;
    font-weight: {{ section.settings.heading_weight }};
  }
  .section-{{ section.id }}-padding .brand-card__info .heading {
    font-size: {{ section.settings.block_heading_size_mb }}px; 
    margin-top: {{ section.settings.margin_heading_mb }}px
  }

  .section-{{ section.id }}-padding .review-count svg {
    color: {{ section.settings.color_star }};
  }
  .section-{{ section.id }}-padding .review-count .active {
    color: {{ section.settings.color_star_active }};
  }

  .section-{{ section.id }}-padding .review-comment {
    font-size: {{ section.settings.content_size }}px;
  }

  .section-{{ section.id }}-padding .product-link__text {
    font-size: {{ section.settings.product_size }}px;
  }
  

  .section-{{ section.id }}-padding .review-item__name {
    font-size: {{ section.settings.name_size }}px;
  }

  .section-{{ section.id }}-padding .review-item__note {
    font-size: {{ section.settings.note_size }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .section-{{ section.id }}-padding .title-wrapper-with-link {
      margin-bottom: {{ section.settings.margin_heading_section }}px;
    }
    .section-{{ section.id }}-padding .title-wrapper-with-link h2 {
      font-size: {{ section.settings.heading_size }}px;
    }
    .section-{{ section.id }}-padding .brand-card__info .heading {
      font-size: {{ section.settings.block_heading_size }}px; 
      margin-top: {{ section.settings.margin_heading }}px
    }
  }
{%- endstyle -%}

<div class="reviews section-review section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
  <div
    class="{% if section.settings.full_width %}page-layout__custom full-width{% else %} page-width{% endif %} layout-{{section.settings.layout}} isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    {% if settings.animations_reveal_on_scroll %}
      data-cascade
    {% endif %}
  >
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper-with-link title-wrapper--no-top-margin {{ section.settings.text_align }}">
        <h2 class="title heading inline-richtext">
          {{ section.settings.title }}
        </h2>
      </div>
    {%- endunless -%}
    {%- if section.blocks.size > 0 -%}
      <div class="review__wrapper">
        {%- if section.settings.custom_layout == 'slider' -%}
        <flickity-slider>
        {%- endif -%}
          <div class="review-list {% if section.settings.custom_layout == 'slider' %} slider {% else %}grid {% endif %} grid--1-col-tablet-down {% if section.settings.layout == 'style_1' %}grid--2-col-desktop {% else %}grid--1-col-desktop {% endif %}"
              style="--grid-desktop-horizontal-spacing: {{ section.settings.column_gap }}px;--grid-desktop-vertical-spacing: {{ section.settings.column_gap }}px"
          >
            {%- for block in section.blocks -%}
              <div class="review-item grid__item">
                <div class="review-item__avatar">
                  {%- if block.settings.avatar != blank -%}
                    {{
                      block.settings.avatar
                      | image_url: width: 300
                      | image_tag: widths: '300', sizes: '100vw', class: 'review-item__img'
                    }}
                  {%- endif -%}
                </div>
                <div class="review-item__content">
                  <div class="content-top">
                    <div class="review-item__header">
                      <div class="review-item__info {{section.settings.layout}}">
                        {%- if block.settings.content != blank and section.settings.layout == 'style_2'-%}
                          <div class="review-comment rte">
                            {{ block.settings.content }}
                          </div>
                        {%- endif -%}
                        {%- if block.settings.name != blank and section.settings.layout == 'style_1' -%}
                          <div class="review-item__name heading">
                            {{ block.settings.name }}
                          </div>
                        {%- endif -%}
                        {%- if block.settings.note != blank -%}
                          <div class="review-item__note sub_heading">
                            {{ block.settings.note }}
                          </div>
                        {%- endif -%}
                      </div>
                      <div class="review-count">
                        {%- assign star = block.settings.star | plus: 0 -%}
                        {%- for i in (1..5) -%}
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" fill="none"
                            {% if forloop.index <= star %}class="active"{% endif %}
                          >
                            <path d="M8 0L10.4712 5.27749L16 6.11518L12 10.199L12.9424 16L8 13.2565L3.05759 16L4 10.199L0 6.11518L5.52879 5.27749L8 0Z" fill="currentColor"/>
                          </svg>
                        {%- endfor -%}
                      </div>
                    </div>
                    {%- if block.settings.name != blank and section.settings.layout == 'style_2' -%}
                      <div class="review-item__name heading">
                        {{ block.settings.name }}
                      </div>
                    {%- endif -%}
                    {%- if block.settings.content != blank and section.settings.layout == 'style_1'-%}
                      <div class="review-comment rte">
                        {{ block.settings.content }}
                      </div>
                    {%- endif -%}
                  </div>
                  <div class="content-bottom">
                    {%- if block.settings.product_image != blank -%}
                      <div class="review-item__product-image">
                        {%- if block.settings.product_image != blank -%}
                          {{
                            block.settings.product_image
                            | image_url: width: 50
                            | image_tag: widths: '50', sizes: '100vw', class: 'review-item__product-img'
                          }}
                        {%- endif -%}
                        {%- if block.settings.product_name != blank -%}
                          <a
                          href="{{ block.settings.product_link }}"
                          rel="noopener noreferrer"
                          class="product-link__text"
                          >
                            <span>{{block.settings.product_name}}</span>
                          </a>
                        {%- endif -%}
                      </div>
                    {%- endif -%}
                  </div>
                </div>
              </div>
            {%- endfor -%}
          </div>
          {%- if section.settings.custom_layout == 'slider' -%}
          </flickity-slider>
          {%- endif -%}
        {%- if section.settings.button_text != blank -%}
          <div class="section__footer d-flex j-c--center">
            <a class="button{% if section.settings.outline %} button--secondary{% endif %}" href="{{ section.settings.button_link }}">
              {{- section.settings.button_text | escape -}}
            </a>
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}
  </div>
</div>


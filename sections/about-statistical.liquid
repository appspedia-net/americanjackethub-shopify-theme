{{ 'section-brand.css' | asset_url | stylesheet_tag }}
{{ 'section-main-about.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mb }}px;
    padding-bottom: {{ section.settings.padding_bottom_mb }}px;
  }
  .section-{{ section.id }}-padding .title-wrapper-with-link {
    margin-bottom: 24px;
  }
  .section-{{ section.id }}-padding .title-wrapper-with-link h2 {
    font-size: {{ section.settings.heading_size_mb }}px;
  }
  .section-{{ section.id }}-padding .brand-card__info .heading {
    font-size: {{ section.settings.count_size_mb }}px;
    color: {{ section.settings.color_count }}
  }
  .section-{{ section.id }}-padding .brand-card__info .sub_heading {
    font-size: {{ section.settings.title_size_mb }}px;
    color: {{ section.settings.color_title }}
  }

  .section-{{ section.id }}-padding .about-statistical .brand-card__info .heading:before {
    font-size: {{ section.settings.count_size_mb | times: 0.8 }}px;
  }

  .section-{{ section.id }}-padding .brand-card__info .brand-card__icon {
    width: {{section.settings.icon_width_mb}}px;
	  height: {{section.settings.icon_width_mb}}px;
  }

  .section-{{ section.id }}-padding .brand-card__info .brand-card__icon svg,
  .section-{{ section.id }}-padding .brand-card__info .brand-card__icon path{
    fill:{{section.settings.icon_color}}
  }
  
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .section-{{ section.id }}-padding .title-wrapper-with-link h2 {
      font-size: {{ section.settings.heading_size }}px;
    }
    .section-{{ section.id }}-padding .brand-card__info .heading {
      font-size: {{ section.settings.count_size }}px;
    }
    .section-{{ section.id }}-padding .brand-card__info .sub_heading {
      font-size: {{ section.settings.title_size }}px;
    }
    .section-{{ section.id }}-padding .brand-card__info .heading:before {
      font-size: {{ section.settings.count_size_mb | times: 0.8 }}px;
    }
    .section-{{ section.id }}-padding .title-wrapper-with-link {
      margin-bottom: 50px;
    }
    .section-{{ section.id }}-padding .brand-card__info .brand-card__icon {
      width: {{section.settings.icon_width}}px;
      height: {{section.settings.icon_width}}px;
    }
  }
{%- endstyle -%}

<div class="brands about-statistical color-{{ section.settings.color_scheme }}{% if section.settings.title == blank %} no-heading{% endif %}">
  <div
    class="page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    {% if settings.animations_reveal_on_scroll %}
      data-cascade
    {% endif %}
  >
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper-with-link title-wrapper--no-top-margin {{ section.settings.text_align }}">
        <h2 class="heading title inline-richtext{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          {{ section.settings.title }}
        </h2>
        {%- if section.settings.sub_heading != blank -%}
          <div class="info subtitle{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
            {{ section.settings.sub_heading }}
          </div>
        {%- endif -%}
      </div>
    {%- endunless -%}
    <slider-component class="slider-mobile-gutter brand__wrapper">
      <ul
        id="Slider-{{ section.id }}"
        class="brand-list grid grid--{{ section.settings.columns_mobile }}-col-tablet-down grid--{{ section.settings.columns_desktop }}-col-desktop"
        role="list"
        style="--grid-desktop-horizontal-spacing: {{ section.settings.column_gap }}px;--grid-desktop-vertical-spacing: {{ section.settings.column_gap }}px"
      >
        {%- for block in section.blocks -%}
          <li
            id="Slide-{{ section.id }}-{{ forloop.index }}"
            class="brand-list__item-{{ block.id }} brand-list__item grid__item slider__slide{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %} color-{{ block.settings.color_scheme }} only-bg--media{% unless block.settings.use_color %} no-bg-media{% endunless %}"
            {{ block.shopify_attributes }}
            {% if settings.animations_reveal_on_scroll %}
              data-cascade
              style="--animation-order: {{ forloop.index }};"
            {% endif %}
          >
            <div class="brand-card content-container">
              <div class="brand-card__info center">
                {%- if block.settings.icon != blank -%}
                  <span class="brand-card__icon">
                    {{ block.settings.icon }}
                  </span>
                {%- endif -%}
                {%- if block.settings.count != blank -%}
                  <span class="inline-richtext heading">
                    {{ block.settings.count }}
                  </span>
                {%- endif -%}
                {%- if block.settings.title != blank -%}
                  <div class="inline-richtext sub_heading">
                    {{ block.settings.title }}
                  </div>
                {%- endif -%}
              </div>
            </div>
          </li>
        {%- endfor -%}
      </ul>
    </slider-component>
  </div>
</div>

{% schema %}
{
  "name": "About statistical",
  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer", "custom.extension"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "t:sections.multicolumn.settings.title.label"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Font size heading",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 28,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "heading_size_mb",
      "label": "Font size heading mobile",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 28,
      "unit": "px"
    },
    {
      "type": "richtext",
      "id": "sub_heading",
      "label": "Info"
    },
    {
      "type": "range",
      "id": "subheading_size",
      "label": "Font size info",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 14,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "subheading_size_mb",
      "label": "Font size info mobile",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 14,
      "unit": "px"
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text align",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 4,
      "label": "t:sections.multicolumn.settings.columns_desktop.label"
    },
    {
      "type": "range",
      "id": "column_gap",
      "min": 2,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Column gap",
      "default": 22
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
      "type": "header",
      "content": "Settings for block"
    },
    {
      "type": "color",
      "id": "color_count",
      "label": "Color count",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "count_size",
      "label": "Font size count",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 50,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "count_size_mb",
      "label": "Font size count on mobile",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 50,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "color_title",
      "label": "Color title",
      "default": "#666666"
    },
    {
      "type": "range",
      "id": "title_size",
      "label": "Font size title",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "title_size_mb",
      "label": "Font size title on mobile",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "icon_width",
      "label": "Icon width",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 72,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "icon_width_mb",
      "label": "Icon width mobile",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 50,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Color title",
      "default": "#fcb800"
    },
    {
      "type": "header",
      "content": "t:sections.multicolumn.settings.header_mobile.content"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "options": [
        {
          "value": "1",
          "label": "t:sections.multicolumn.settings.columns_mobile.options__1.label"
        },
        {
          "value": "2",
          "label": "t:sections.multicolumn.settings.columns_mobile.options__2.label"
        }
      ],
      "default": "2",
      "label": "t:sections.multicolumn.settings.columns_mobile.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_top_mb",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top on Mobile",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom_mb",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom on Mobile",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "count",
      "name": "Count",
      "settings": [
        {
          "type": "textarea",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "count",
          "label": "Count",
          "default": "500"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Intimate Partner"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About statistical"
    }
  ]
}
{% endschema %}

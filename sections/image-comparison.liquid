          "id": "tertiary_link_icon",
          "label": "Tertiary link icon"
        },
        {
          "type": "text",
          "id": "tertiary_link_label",
          "label": "Tertiary link label"
        },
        {
          "type": "url",
          "id": "tertiary_link",
          "label": "Tertiary link URL"

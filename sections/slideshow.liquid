{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}
{{ 'component-slideshow.css' | asset_url | stylesheet_tag }}

{%-  liquid 
  assign  block_slide = section.blocks | where: "type","slide"
%} 

{%- style -%}
  .section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top_mb }}px;
    padding-bottom: {{ section.settings.padding_bottom_mb }}px;
  }
  .section-{{ section.id }} .slider-counter__link--dots .dot {
    border-color: {{ section.settings.border_color_dot }};
    background-color: {{ section.settings.color_dot }};
  }
  .section-{{ section.id }} .slider-counter__link--active.slider-counter__link--dots .dot {
    background-color: {{ section.settings.active_color_dot }};
    border-color: {{ section.settings.active_color_dot }};
  }
  .section-{{ section.id }} .slider-button {
    color: {{ section.settings.color_arrow }} !important;
    background-color: {{ section.settings.bgcolor_arrow | color_modify: 'alpha', 0.3 }} !important;
  }
  
  .slideshow__controls .slider-counter .slider-counter__link--dots{
    display: none;
  }

  {%- if block_slide.size == 1 -%}
    .slideshow__controls .slider-counter .slider-counter__link--dots:nth-child(1){
      display: block;
    }
  {%- endif -%}
  {%- if block_slide.size == 2 -%}
    .slideshow__controls .slider-counter .slider-counter__link--dots:nth-child(1),
    .slideshow__controls .slider-counter .slider-counter__link--dots:nth-child(2){
      display: block;
    }
  {%- endif -%}
  {%- if block_slide.size == 3 -%}
    .slideshow__controls .slider-counter .slider-counter__link--dots:nth-child(1),
    .slideshow__controls .slider-counter .slider-counter__link--dots:nth-child(2),
    .slideshow__controls .slider-counter .slider-counter__link--dots:nth-child(3){
      display: block;
    }
  {%- endif -%}
{%- endstyle -%}
{%- if section.settings.slide_height == 'adapt_image' and section.blocks.first.settings.image != blank -%}
  {%- style -%}
    @media screen and (max-width: 749px) {
      #Slider-{{ section.id }}::before,
      #Slider-{{ section.id }} .media::before,
      #Slider-{{ section.id }}:not(.banner--mobile-bottom) .banner__content::before {
        padding-bottom: {{ 1 | divided_by: section.blocks.first.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }

    @media screen and (min-width: 750px) {
      #Slider-{{ section.id }}::before,
      #Slider-{{ section.id }} .media::before {
        padding-bottom: {{ 1 | divided_by: section.blocks.first.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }
  {%- endstyle -%}
{%- endif -%}
<style>
  @media screen and (min-width: 750px) {
    .section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .section-{{ section.id }} .slideshow {
      --height_custom: {{ section.settings.height_custom }}px;
    }
  }
  @media screen and (max-width: 749px) {
    .section-{{ section.id }} .slideshow {
      --height_custom: {{ section.settings.height_image_mb }}%;
    }
  }
  
  @media screen and (min-width: 990px){
    .section-{{ section.id }}.Slideshow.slide--hasbanner slideshow-component{
      width: calc(100% - {{section.settings.banner_colum_width}}%);
    }
    
    {% if section.settings.column_gap == 0 %}
      .section-{{ section.id }} .slideshow__text-wrapper.banner__content{
        border-right: none!important;
      }
      .slider-banner .slider-banner_items{
        border-top:none!important;
      }
    {% endif %}
  }
</style>
<div class="Slideshow-section color-{{ section.settings.color_scheme }} ">
<div id="Slideshow" class="Slideshow{% if section.settings.layout == 'grid' %} page-width {% else %} full-width{% endif %} control__{{ section.settings.control_style }} section-{{ section.id }}">
    <slideshow-component
        class="slider-mobile-gutter{% if section.settings.show_text_below %} mobile-text-below{% endif %} {% unless section.settings.enable_dost_deks %}not_dots_desks{% endunless %} {% unless section.settings.enable_arrow_deks %}not_button_arrow{% endunless %}   "
        role="region"
        aria-roledescription="{{ 'sections.slideshow.carousel' | t }}"
      >
        <div
          class="slideshow banner banner--{{ section.settings.slide_height }} grid grid--1-col slider slider--everywhere{% if section.settings.show_text_below %} banner--mobile-bottom{% endif %}{% if section.blocks.first.settings.image == blank %} slideshow--placeholder{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}" 
          id="Slider-{{ section.id }}"
          aria-live="polite"
          aria-atomic="true"
          data-autoplay="{{ section.settings.auto_rotate }}"
          data-speed="{{ section.settings.change_slides_speed }}"
        >
          {%- for block in section.blocks -%}
            {%- case block.type -%}
            {%- when 'slide' -%}
            <div
              class="slideshow__slide grid__item grid--1-col slider__slide color-{{ block.settings.color_scheme }}"
              id="Slide-{{ section.id }}-{{ forloop.index }}"
              {{ block.shopify_attributes }}
              role="group"
              aria-roledescription="{{ 'sections.slideshow.slide' | t }}"
              aria-label="{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
              tabindex="-1"
            >
              <div class="slideshow__media banner__media media{% if block.settings.image == blank %} placeholder{% endif %} {% if block.settings.enable_resize %} media--size{% endif %}"
                {% if block.settings.enable_resize %}
                  style="--width-block: {{ block.settings.resize }}px;
                          --position-ver: {{ block.settings.position_ver }}%;
                          --position-hoz: {{ block.settings.position_hoz }}%;
                          --width-block-mb: {{ block.settings.resize_mb }}px;
                          --position-ver-mb: {{ block.settings.position_ver_mb }}%;
                          --position-hoz-mb: {{ block.settings.position_hoz_mb }}%"
                {% endif %}
              >
                {%- if block.settings.image -%}
                  {%- liquid
                    assign height = block.settings.image.width | divided_by: block.settings.image.aspect_ratio | round
                    assign height_mb = block.settings.image_mobile.width | divided_by: block.settings.image_mobile.aspect_ratio | round
                    assign sizes = '100vw'
                    assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
                    assign fetch_priority = 'auto'
                    assign class_image = ''
                    assign class_image_mb = ''
                    if block.settings.image_mobile != blank
                      assign class_image = 'hidden-mb'
                      assign class_image_mb = 'hidden-pc'
                    endif
                    if section.index == 1
                      assign fetch_priority = 'high'
                    endif
                  -%}
                  {%- if forloop.first %}
                    {{
                      block.settings.image
                      | image_url: width: 3840
                      | image_tag: 
                        height: height, 
                        sizes: sizes, 
                        widths: widths, 
                        fetchpriority: fetch_priority,
                        class: class_image
                    }}
                  {%- else -%}
                    {{
                      block.settings.image
                      | image_url: width: 3840
                      | image_tag: loading: 'lazy', 
                        height: height, 
                        sizes: sizes, 
                        widths: widths,
                        class: class_image
                    }}
                  {%- endif -%}
                  {%- if block.settings.image_mobile != blank -%}
                    {{
                      block.settings.image_mobile
                      | image_url: width: 1100
                      | image_tag: 
                        height: height_mb, 
                        sizes: sizes, 
                        widths: widths, 
                        fetchpriority: fetch_priority,
                        class: class_image_mb
                    }}
                  {%- endif -%}
                {%- else -%}
                  {%- assign placeholder_slide = forloop.index | modulo: 2 -%}
                  {%- if placeholder_slide == 1 -%}
                    {{ 'hero-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
                  {%- else -%}
                    {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {%- endif -%}
                {%- endif -%}
              </div>
              <div class="slideshow__text-wrapper banner__content-{{ block.id }} banner__content banner__content--{{ block.settings.box_align }} banner__content__mb--{{ block.settings.box_align_mb }} page-width{% if settings.animations_reveal_on_scroll and forloop.index == 1 %} scroll-trigger animate--slide-in{% endif %}">
                {%- style -%}
                  .banner__content-{{ block.id }} .sub_heading {
                    font-size: {{ block.settings.subheading_size }}px;
                    margin-bottom: {{ block.settings.sub_margin }}px;
                    font-weight: {{ block.settings.subheading_weight }};
                  }
                  .banner__content-{{ block.id }} .heading {
                    font-size: {{ block.settings.heading_size }}px;
                    margin-bottom: {{ block.settings.heading_margin }}px;
                    font-weight: {{ block.settings.heading_weight }};
                  }
                  .banner__content-{{ block.id }} .rte {
                    font-size: {{ block.settings.content_size }}px; 
                    margin-bottom: {{ block.settings.content_margin }}px;
                  }
                  .banner__content-{{ block.id }} .info {
                    font-size: {{ block.settings.info_size }}px; 
                    margin-bottom: {{ block.settings.info_margin }}px;
                  }
                  @media screen and (max-width: 749px) {
                    .banner__content-{{ block.id }} .sub_heading {
                      font-size: {{ block.settings.subheading_size_mb }}px;
                      margin-bottom: {{ block.settings.sub_margin_mb }}px
                    }
                    .banner__content-{{ block.id }} .heading {
                      font-size: {{ block.settings.heading_size_mb }}px;
                      margin-bottom: {{ block.settings.heading_margin_mb }}px
                    }
                    .banner__content-{{ block.id }} .rte {
                      font-size: {{ block.settings.text_size_mb }}px; 
                      margin-bottom: {{ block.settings.content_margin_mb }}px
                    }
                    .banner__content-{{ block.id }} .info {
                      font-size: {{ block.settings.info_size_mb }}px; 
                      margin-bottom: {{ block.settings.info_margin_mb }}px;
                    }
                  }
                {%- endstyle -%}
                <div class="slideshow__text content-container content-container--full-width-mobile slideshow__text--{{ block.settings.text_alignment }} slideshow__text-mobile--{{ block.settings.text_alignment_mobile }}">
                  {%- if block.settings.subheading != blank -%}
                    <div class="sub_heading">
                      {{ block.settings.subheading }}
                    </div>
                  {%- endif -%}
                  {%- if block.settings.heading != blank -%}
                    <h2 class="heading inline-richtext">
                      {{ block.settings.heading }}
                    </h2>
                  {%- endif -%}
                  {%- if block.settings.content != blank -%}
                    <div class="rte" 
                      {{ block.shopify_attributes }}
                    >
                      {{ block.settings.content }}
                    </div>
                  {%- endif -%}
                  {%- if block.settings.info != blank -%}
                    <div class="info" 
                      {{ block.shopify_attributes }}
                    >
                      {{ block.settings.info }}
                    </div>
                  {%- endif -%}

                  {% comment %} Jerry {% endcomment %}
                  {%- if block.settings.first_link_label != blank or block.settings.tertiary_link_label != blank or block.settings.second_link_label != blank -%}
                    <div
                        class="group-links"
                        {{ block.shopify_attributes }}
                        data-cascade
                        style="--animation-order: {{ forloop.index }}; --margin-bottom: {{block.settings.margin_link_section}}px; --margin-bottom-mb: {{block.settings.margin_link_section_mb}}px;"
                    >
                        {%- if block.settings.first_link_label != blank -%}
                        <a
                            {% if block.settings.first_link == blank %}
                            role="link" aria-disabled="true"
                            {% else %}
                            href="{{ block.settings.first_link }}"
                            {% endif %}
                            class="link"
                            style="--font-size: {{block.settings.link_size}}px; -font-size-mb: {{block.settings.link_size_mb}}px"
                        > 
                            {%- if block.settings.first_link_icon != blank -%}
                            <span class="link_icon">
                                <img
                                src="{{ block.settings.first_link_icon | image_url }}"
                                {% if block.settings.first_link_icon.alt != blank %}
                                alt="{{ block.settings.first_link_icon.alt | escape }}"
                                {% else %}
                                role="presentation"
                                {% endif %}
                                height="auto"
                                width="auto"
                                loading="lazy"
                            >
                            </span>
                            {%- endif -%}
                            <span class="text">{{- block.settings.first_link_label | escape -}}</span>
                        </a>
                        {%- endif -%}
                        {%- if block.settings.second_link_label != blank -%}
                        <a
                            {% if block.settings.second_link == blank %}
                            role="link" aria-disabled="true"
                            {% else %}
                            href="{{ block.settings.second_link }}"
                            {% endif %}
                            class="link"
                            style="--font-size: {{block.settings.link_size}}px; -font-size-mb: {{block.settings.link_size_mb}}px"
                        >
                            {%- if block.settings.second_link_icon != blank -%}
                            <span class="link_icon">
                                <img
                                src="{{ block.settings.second_link_icon | image_url }}"
                                {% if block.settings.second_link_icon.alt != blank %}
                                alt="{{ block.settings.second_link_icon.alt | escape }}"
                                {% else %}
                                role="presentation"
                                {% endif %}
                                height="auto"
                                width="auto"
                                loading="lazy"
                            >
                            </span>
                            {%- endif -%}
                            <span class="text">{{- block.settings.second_link_label | escape -}}</span>
                        </a>
                        {%- endif -%}
                        {%- if block.settings.tertiary_link_label != blank -%}
                        <a
                            {% if block.settings.tertiary_link == blank %}
                            role="link" aria-disabled="true"
                            {% else %}
                            href="{{ block.settings.tertiary_link }}"
                            {% endif %}
                            class="link"
                            style="--font-size: {{block.settings.link_size}}px; -font-size-mb: {{block.settings.link_size_mb}}px"
                        >
                            {%- if block.settings.tertiary_link_icon != blank -%}
                            <span class="link_icon">
                                <img
                                src="{{ block.settings.tertiary_link_icon | image_url }}"
                                {% if block.settings.tertiary_link_icon.alt != blank %}
                                alt="{{ block.settings.tertiary_link_icon.alt | escape }}"
                                {% else %}
                                role="presentation"
                                {% endif %}
                                height="auto"
                                width="auto"
                                loading="lazy"
                            >
                            </span>
                            {%- endif -%}
                            <span class="text">{{- block.settings.tertiary_link_label | escape -}}</span>
                        </a>
                        {%- endif -%}
                    </div>
                  {%- endif -%}
                    {% comment %} end jerry {% endcomment %}

                  {%- if block.settings.button_label != blank or block.settings.button_link_label != blank -%}
                    <div class="banner__buttons d-flex a-i--center">
                      {%- if block.settings.button_label != blank -%}
                        <a
                          {% if block.settings.link %}
                            href="{{ block.settings.link }}"
                          {% else %}
                            role="link" aria-disabled="true"
                          {% endif %}
                          class="{{ block.settings.button_style }}{% if block.settings.button_style == 'link' %} link-decoration{% endif %}"
                          {% if block.settings.button_style == 'button' %}
                            style="--buttons-size: {{ block.settings.button_height }}px; min-width: {{ block.settings.button_width }}px"
                          {% endif %}
                        >
                          {{- block.settings.button_label | escape -}}
                        </a>
                      {%- endif -%}
                      
                      {%- if block.settings.button_link_label != blank -%}
                        <a
                          {% if block.settings.button_link %}
                            href="{{ block.settings.button_link }}"
                          {% else %}
                            role="link" aria-disabled="true"
                          {% endif %}
                          class="link link-decoration"
                        >
                          {{- block.settings.button_link_label | escape -}}
                        </a>
                      {%- endif -%}
                      
                    </div>
                  {%- endif -%}
                </div>
              </div>
            </div>
          {%- endcase-%}
          {%- endfor -%}
        </div>
        {%- if section.settings.auto_rotate and section.blocks.size > 1 -%}
          <div class="slideshow__controls {% if section.settings.control_style == 'style1' %}page-width {% endif %}slideshow__controls--top slider-buttons no-js-hidden{% if section.settings.show_text_below %} slideshow__controls--border-radius-mobile{% endif %}">
            <div class="slider-counter slider-counter--{{ section.settings.slider_visual }}{% if section.settings.slider_visual == 'counter' or section.settings.slider_visual == 'numbers' %} caption{% endif %}">
              {%- if section.settings.slider_visual == 'counter' -%}
                <span class="slider-counter--current">1</span>
                <span aria-hidden="true"> / </span>
                <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
                <span class="slider-counter--total">{{ section.blocks.size }}</span>
              {%- else -%}
                <div class="slideshow__control-wrapper">
                  {%- for block in section.blocks -%}
                    <button
                      class="slider-counter__link slider-counter__link--{{ section.settings.slider_visual }} link"
                      aria-label="{{ 'sections.slideshow.load_slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
                      aria-controls="Slider-{{ section.id }}"
                    >
                      {%- if section.settings.slider_visual == 'numbers' -%}
                        {{ forloop.index -}}
                      {%- else -%}
                        <span class="dot"></span>
                      {%- endif -%}
                    </button>
                  {%- endfor -%}
                </div>
              {%- endif -%}
            </div>
            <button
              type="button"
              class="slider-button slider-button--prev"
              name="previous"
              aria-label="{{ 'sections.slideshow.previous_slideshow' | t }}"
              aria-controls="Slider-{{ section.id }}"
            >
              {%- render 'icon' with 'caret' -%}
            </button>
            <button
              type="button"
              class="slider-button slider-button--next"
              name="next"
              aria-label="{{ 'sections.slideshow.next_slideshow' | t }}"
              aria-controls="Slider-{{ section.id }}"
            >
              {%- render 'icon' with 'caret' -%}
            </button>

            {%- if section.settings.auto_rotate -%}
              <button
                style="display: none"
                type="button"
                class="slideshow__autoplay slider-button no-js-hidden{% if section.settings.auto_rotate == false %} slideshow__autoplay--paused{% endif %}"
                aria-label="{{ 'sections.slideshow.pause_slideshow' | t }}"
              >
                {%- render 'icon' with 'pause' -%}
                {%- render 'icon' with 'play' -%}
              </button>
            {%- endif -%}
          </div>
          <noscript>
            <div class="slider-buttons">
              <div class="slider-counter">
                {%- for block in section.blocks -%}
                  <a
                    href="#Slide-{{ section.id }}-{{ forloop.index }}"
                    class="slider-counter__link link"
                    aria-label="{{ 'sections.slideshow.load_slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
                  >
                    {{ forloop.index }}
                  </a>
                {%- endfor -%}
              </div>
            </div>
          </noscript>
        {%- endif -%}

        {%- if section.blocks.size > 1 and section.settings.auto_rotate == false -%}
          <div class="slideshow__controls {% if section.settings.control_style == 'style1' %}page-width {% endif %}slider-buttons no-js-hidden{% if section.settings.show_text_below %} slideshow__controls--border-radius-mobile{% endif %}">
            <div class="slider-counter slider-counter--{{ section.settings.slider_visual }}{% if section.settings.slider_visual == 'counter' or section.settings.slider_visual == 'numbers' %} caption{% endif %}">
              {%- if section.settings.slider_visual == 'counter' -%}
                <span class="slider-counter--current">1</span>
                <span aria-hidden="true"> / </span>
                <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
                <span class="slider-counter--total">{{ section.blocks.size }}</span>
              {%- else -%}
                <div class="slideshow__control-wrapper">
                  {%- for block in section.blocks -%}
                    <button
                      class="slider-counter__link slider-counter__link--{{ section.settings.slider_visual }} link"
                      aria-label="{{ 'sections.slideshow.load_slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
                      aria-controls="Slider-{{ section.id }}"
                    >
                      {%- if section.settings.slider_visual == 'numbers' -%}
                        {{ forloop.index -}}
                      {%- else -%}
                        <span class="dot"></span>
                      {%- endif -%}
                    </button>
                  {%- endfor -%}
                </div>
              {%- endif -%}
            </div>
            <button
              type="button"
              class="slider-button slider-button--prev"
              name="previous"
              aria-label="{{ 'sections.slideshow.previous_slideshow' | t }}"
              aria-controls="Slider-{{ section.id }}"
            >
              {% render 'icon' with 'caret' %}
            </button>

            <button
              type="button"
              class="slider-button slider-button--next"
              name="next"
              aria-label="{{ 'sections.slideshow.next_slideshow' | t }}"
              aria-controls="Slider-{{ section.id }}"
            >
              {% render 'icon' with 'caret' %}
            </button>

            {%- if section.settings.auto_rotate -%}
              <button
                style="display: none"
                type="button"
                class="slideshow__autoplay slider-button no-js-hidden{% if section.settings.auto_rotate == false %} slideshow__autoplay--paused{% endif %}"
                aria-label="{{ 'sections.slideshow.pause_slideshow' | t }}"
              >
                {%- render 'icon' with 'pause' -%}
                {%- render 'icon' with 'play' -%}
              </button>
            {%- endif -%}
          </div>
          <noscript>
            <div class="slider-buttons">
              <div class="slider-counter">
                {%- for block in section.blocks -%}
                  <a
                    href="#Slide-{{ section.id }}-{{ forloop.index }}"
                    class="slider-counter__link link"
                    aria-label="{{ 'sections.slideshow.load_slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
                  >
                    {{ forloop.index }}
                  </a>
                {%- endfor -%}
              </div>
            </div>
          </noscript>
        {%- endif -%}
      </slideshow-component>
  </div>
 

{%- if request.design_mode -%}
  <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
{%- endif -%}
</div>
{% schema %}
{
  "name": "t:sections.slideshow.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer", "custom.extension"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },   
    {
      "type": "header",
      "content": "Control"
    },
    {
      "type": "select",
      "id": "control_style",
      "label": "Control style",
      "options": [
        {
          "value": "style1",
          "label": "Style 1"
        },
        {
          "value": "style2",
          "label": "Style 2"
        }
      ],
      "default": "style1"
    },
    {
      "type": "checkbox",
      "id": "enable_dost_deks",
      "label": "Enable dost for desktop.",
      "default": false
    },
    {
      "type": "color",
      "id": "color_dot",
      "label": "Background color dots",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "border_color_dot",
      "label": "Border color dots",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "active_color_dot",
      "label": "Active color dots",
      "default": "#fff"
    },
    {
      "type": "checkbox",
      "id": "enable_arrow_deks",
      "label": "Enable button arrow.",
      "default": true
    },
    {
      "type": "color",
      "id": "color_arrow",
      "label": "Color arrow",
      "default": "#000"
    },
    {
      "type": "color",
      "id": "bgcolor_arrow",
      "label": "Background color arrow",
      "default": "#fff"
    },
    {
      "type": "paragraph",
      "content": "================="
    },

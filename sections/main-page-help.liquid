              </svg>                    
              <span class="text">{{ section.settings.email }}</span>        
            </a> 
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}
  </div>
  
</div>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section main-page-help",
  "settings": [
    {
      "type": "select",
      "id": "align",
      "options": [
        {
          "value": "left",
          "label": "t:sections.slideshow.blocks.slide.settings.text_alignment.option_1.label"
        },
        {
          "value": "center",
          "label": "t:sections.slideshow.blocks.slide.settings.text_alignment.option_2.label"
        }
      ],
      "default": "left",
      "label": "t:sections.slideshow.blocks.slide.settings.text_alignment.label"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 3,
      "label": "t:sections.collection-list.settings.columns_desktop.label"
    },
    {
      "type": "range",
      "id": "column_gap",
      "min": 2,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Column gap",
      "default": 28
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "options": [
        {
          "value": "1",
          "label": "t:sections.collection-list.settings.columns_mobile.options__1.label"
        },
        {
          "value": "2",
          "label": "t:sections.collection-list.settings.columns_mobile.options__2.label"
        }
      ],
      "default": "1",
      "label": "t:sections.collection-list.settings.columns_mobile.label"
    },
    {
        "type": "header",
        "content": "Settings for block"
    },
    {
      "type": "color",
      "id": "color_block",
      "label": "Color block heading",
      "default": "#151515"
    },
    {
      "type": "range",
      "id": "title_block_size",
      "label": "Font size block heading",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "title_block_size_mb",
      "label": "Font size block heading mobile",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Infomation"
    },
    {
      "type": "richtext",
      "id": "heading_info",
      "label": "Heading",
      "default": "<p>Default <em>richtext</em> <a href=\"https://example.com/\">content</a></p>"
    },
    {
      "type": "color",
      "id": "heading_info_color",
      "label": "Color heading",
      "default": "#070B1A"
    },
    {
      "type": "range",
      "id": "heading_info_size",
      "label": "Font size block heading",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 36,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "heading_info_size_mb",
      "label": "Font size block heading mobile",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone number",
      "default": "4-956-232-0955"
    },
    {
      "type": "color",
      "id": "phone_color",
      "label": "Phone color",
      "default": "#F27061"
    },
    {
      "type": "range",
      "id": "phone_size",
      "label": "Font size phone",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 30,
      "unit": "px"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "Medicator@gmail.com"
    },   
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_top_mb",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top on Mobile",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom_mb",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom on Mobile",
      "default": 36
    }
  ],
  "blocks": [
    {
      "name": "item",
      "type": "Item",
      "settings": [
         {
           "type": "image_picker",
           "id": "image",
           "label": "Image"
         },
         {
           "type": "inline_richtext",
           "id": "title",
           "label": "Title",
           "default": "Heading"
         },
         {
           "type": "url",
           "id": "url",
           "label": "Link"
         }
      ]
    }
  ]
}
{% endschema %}

              <path d="M15.0564 8.47426L16.0299 10.2187C16.9085 11.7929 16.5558 13.858 15.1721 15.2417C15.1721 15.2417 15.1721 15.2417 15.1721 15.2417C15.1719 15.2418 13.4938 16.9202 16.5368 19.9632C19.5791 23.0056 21.2575 21.3287 21.2583 21.3279C21.2583 21.3279 21.2583 21.3279 21.2583 21.3279C22.642 19.9442 24.7071 19.5915 26.2813 20.4701L28.0257 21.4436C30.4028 22.7702 30.6836 26.1039 28.5942 28.1933C27.3386 29.4488 25.8006 30.4257 24.1004 30.4902C21.2382 30.5987 16.3774 29.8743 11.5016 24.9984C6.62569 20.1226 5.90132 15.2618 6.00983 12.3996C6.07428 10.6994 7.0512 9.16135 8.30671 7.90585C10.3961 5.81642 13.7298 6.09716 15.0564 8.47426Z" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
            <span class="text">{{ section.settings.phone }}</span>         
          </div>
        {%- endif -%}
        {%- if section.settings.email != blank -%}
          <div class="contact-email contact-info__item">
            <a class="button button--secondary" href="mailto:{{ section.settings.email }}">
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M7.5013 9.99935C7.5013 10.4596 7.12821 10.8327 6.66797 10.8327C6.20773 10.8327 5.83464 10.4596 5.83464 9.99935C5.83464 9.53911 6.20773 9.16602 6.66797 9.16602C7.12821 9.16602 7.5013 9.53911 7.5013 9.99935Z" fill="currentColor"/>

{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mb }}px;
    padding-bottom: {{ section.settings.padding_bottom_mb }}px;
  }

  .section-{{ section.id }}-padding .help__link {
    font-size: {{ section.settings.title_block_size_mb }}px;
    color: {{ section.settings.color_block }};
  }

  .section-{{ section.id }}-padding .contact-phone {
    color: {{ section.settings.phone_color }};
    font-size: calc({{ section.settings.phone_size }}px - {{ section.settings.phone_size | times: 0.2 }}px);
  }

  .section-{{ section.id }}-padding .heading_info {
    color: {{ section.settings.heading_info_color }};
    font-size: {{ section.settings.heading_info_size_mb }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .section-{{ section.id }}-padding .help__link {
      font-size: {{ section.settings.title_block_size }}px;
    }
    .section-{{ section.id }}-padding .contact-phone {
      font-size: {{ section.settings.phone_size }}px;
    }
    .section-{{ section.id }}-padding .heading_info {
      font-size: {{ section.settings.heading_info_size }}px;
    }
  }
{%- endstyle -%}

<div class="page-width section-{{ section.id }}-padding">
  <h1 class="main-page-title page-title heading {{ section.settings.align }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
    {{ page.title | escape }}
  </h1>
  {%- if section.blocks.size > 0 -%}
    <div class="page-help__wrapper">
        <div class="page-help__lists grid grid--{{ section.settings.columns_mobile }}-col-tablet-down grid--{{ section.settings.columns_desktop }}-col-desktop"
          style="--grid-desktop-horizontal-spacing: {{ section.settings.column_gap }}px;
          --grid-desktop-vertical-spacing: 36px"
        >
            {%- for block in section.blocks -%}
            <div class="help__wrapper--item grid__item">
              <div
                class="image-help__wrapper {% if block.settings.image != blank %} media{% else %} image-with-text__media--placeholder placeholder{% endif %}"
                {% if block.settings.image != blank %}
                  style="padding-bottom: {{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100 }}%;"
                {% endif %}
              >
                {%- if block.settings.image != blank -%}
                  {%- capture sizes -%}
                    (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                    (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
                  {%- endcapture -%}
                  {{
                    block.settings.image
                    | image_url: width: 1500
                    | image_tag: sizes: sizes, widths: '165, 360, 535, 750, 1070, 1500'
                  }}
                {%- else -%}
                  {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}
              </div>
              {%- if block.settings.title != blank -%}
                <div class="content-help__wrapper">
                  <a href="{{ block.settings.url }}" class="help__link">
                    {{ block.settings.title }}
                    <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M6.75 3.75L11.25 9L6.75 14.25" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  </a>
                </div>
              {%- endif -%}
            </div>
            {%- endfor -%}
        </div>
    </div>
  {%- endif -%}
  <div class="help__info">
    {%- if section.settings.heading_info != blank -%}
      <h2 class="heading_info">{{ section.settings.heading_info }}</h2>
    {%- endif -%}
    {%- if section.settings.phone != blank or section.settings.email != blank -%}
      <div class="contact-info">
        {%- if section.settings.phone != blank -%}
          <div class="contact-phone contact-info__item d-flex a-i--center j-c--center">
            <svg width="36" height="37" viewBox="0 0 36 37" fill="none" xmlns="http://www.w3.org/2000/svg">

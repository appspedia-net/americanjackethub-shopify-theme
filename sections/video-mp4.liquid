  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer", "custom.extension"]
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "t:sections.video.settings.full_width.label",
      "default": false
    },
    {
      "type": "range",
      "id": "custom_height_video",
      "min": 50,
      "max": 100,
      "step": 1,
      "unit": "vh",
      "label": "Custom height video",
      "default": 100,
      "info": "The term 'vh' is defined as the height of the device's screen." 
    },
    {
      "type": "select",
      "id": "option_type",
      "label": "Type options",
      "default":"video",
      "options": [
        {
          "label": "Video",
          "value": "video"
        },
        {
          "label": "Image",
          "value": "image"
        }
      ]
    }, 
    {
      "type": "video",
      "id": "mp4_url",
      "label": "URL video mp4",
      "info": "Use for option type video"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "Use for option type image"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
        "type": "header",
        "content": "Content"
    },
    {
        "type": "range",
        "id": "content_position_ver",
        "label": "Content position vertical",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 50,
        "unit": "%"
    },
    {
        "type": "range",
        "id": "content_position_hoz",

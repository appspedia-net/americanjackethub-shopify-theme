{{ 'video-section.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mb }}px;
    padding-bottom: {{ section.settings.padding_bottom_mb}}px;
  }
  .section-{{ section.id }}-padding .section-content-wrapper .heading {
      font-weight: {{section.settings.heading_weight}};
      font-size: {{section.settings.heading_size_mb}}px;
      margin-bottom: {{section.settings.heading_margin_mb}}px;
      text-transform: {{section.settings.heading_transform}};
  }
  .section-{{ section.id }}-padding .section-content-wrapper .desc {
      font-size: {{section.settings.text_size_mb}}px;
      margin-bottom: {{section.settings.content_margin_mb}}px;
  }
  .section-{{ section.id }}-padding .section-content-wrapper .banner__buttons .button{
    min-width:{{section.settings.button_width}}px;
    height: {{section.settings.button_height}}px;
  }
  .section-{{ section.id }}-padding video, 
  .section-{{ section.id }}-padding img{
    height: {{section.settings.custom_height_video}}vh;
  }
   
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .section-{{ section.id }}-padding .section-content-wrapper .heading {
      font-size: {{section.settings.heading_size}}px;
      margin-bottom: {{section.settings.heading_margin}}px;
    }
    .section-{{ section.id }}-padding .section-content-wrapper .desc {
      font-size: {{section.settings.content_size}}px;
      margin-bottom: {{section.settings.content_margin}}px;
    }
  }
{%- endstyle -%}

{%- capture sizes -%}
  {% if section.settings.full_width -%}
    100vw
  {%- else -%}
    (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 }}px, (min-width: 750px)
    calc(100vw - 10rem), 100vw
  {%- endif %}
{%- endcapture -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="video-section video-section_MP4 isolate{% unless section.settings.full_width %} page-width{% endunless %} section-{{ section.id }}-padding">
    <div class="section-wrapper">
      {%- if section.settings.option_type == 'video' -%}
        <div class="item item-video">
          {%- if section.settings.mp4_url -%}
            {% assign video_sources = section.settings.mp4_url.sources | sort: 'height' | last %}
            {% assign video_url = video_sources.url %}
            <video preload="metadata" autoplay muted loop playsinline>
              <source src="{{video_url }}" type="video/mp4">
            </video>
          {%- else -%}
            {{ 'hero-apparel-2' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
          {%- endif -%}
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'heading' -%}
                {%- if  block.settings.heading != blank -%}
                  <h3 class="block-heading {{ block.settings.text_alignment }}"
                    style="
                    --color: {{ block.settings.heading_color }};
                    --position-hoz: {{ block.settings.content_position_hoz }}%;
                    --position-ver: {{ block.settings.content_position_ver }}%;
                    --position-hoz-mb: {{ block.settings.content_position_hoz_mb }}%;
                    --position-ver-mb: {{ block.settings.content_position_ver_mb }}%;
                    --font-weight: {{block.settings.heading_weight}};
                    --font_style: {{block.settings.font_style}};
                    --font-size: {{ block.settings.heading_size }}px;
                    --font-size-mb: {{ block.settings.heading_size_mb }}px;
                  ">
                    <span>{{ block.settings.heading}}</span>
                  </h3>
                {%- endif -%}
                {%- when 'link' -%}
                  {%- if block.settings.link_url!= blank %}
                    <a href="{{ block.settings.link_url }}" class="block-link" target="_blank"
                    style="
                      --color: {{ block.settings.link_color }};
                      --position-hoz: {{ block.settings.content_position_hoz }}%;
                      --position-ver: {{ block.settings.content_position_ver }}%;
                      --position-hoz-mb: {{ block.settings.content_position_hoz_mb }}%;
                      --position-ver-mb: {{ block.settings.content_position_ver_mb }}%;
                      --font-weight: {{block.settings.link_weight}};
                      --font_style: {{block.settings.font_style}};
                      --font-size: {{ block.settings.link_size }}px;
                      --font-size-mb: {{ block.settings.link_size_mb }}px;
                    ">
                      
                      <span class="text">{{ block.settings.link_text }}</span>
                      {% render 'icon' with 'arrow-right' %}
                    </a>
                  {%- endif %}
                {%- when 'link_list'-%}
                  {%- if block.settings.menu != blank -%}
                    <ul class="block-link_list list-unstyled"
                    style="
                      --color: {{ block.settings.link_list_color }};
                      --position-hoz: {{ block.settings.content_position_hoz }}%;
                      --position-ver: {{ block.settings.content_position_ver }}%;
                      --position-hoz-mb: {{ block.settings.content_position_ver_mb }}%;
                      --position-ver-mb: {{ block.settings.content_position_hoz_mb }}%;
                      --font-weight: {{block.settings.link_list_weight}};
                      --font_style: {{block.settings.font_style}};
                      --font-size: {{ block.settings.link_list_size }}px;
                      --font-size-mb: {{ block.settings.link_list_size_mb }}px;
                    ">
                      {%- for link in block.settings.menu.links -%}
                        <li>
                          <a
                            href="{{ link.url }}"
                            class="link link--text list-menu__item list-menu__item--link"
                          >
                            <span class="text">
                              {{ link.title }}
                              {% render 'icon' with 'arrow-right' %}
                            </span>
                            
                          </a>
                        </li>
                      {%- endfor -%}
                    </ul>
                  {%- endif -%}
            {%- endcase -%}
          {%- endfor -%}
        </div>
      {%- else -%}
        <div class="item item-image">
          {%- if section.settings.image-%}
            {{
              section.settings.image
              | image_url: width: 3840
              | image_tag: sizes: sizes, 
              widths: '375, 750, 1100, 1500, 1780, 2000, 3000, 3840', 
              alt: ""
            }}
          {%- else -%}
            {{ 'hero-apparel-2' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
          {%- endif -%}
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'heading' -%}
                {%- if  block.settings.heading != blank -%}
                  <h3 class="block-heading {{ block.settings.text_alignment }}"
                    style="
                    --color: {{ block.settings.heading_color }};
                    --position-hoz: {{ block.settings.content_position_hoz }}%;
                    --position-ver: {{ block.settings.content_position_ver }}%;
                    --position-hoz-mb: {{ block.settings.content_position_hoz_mb }}%;
                    --position-ver-mb: {{ block.settings.content_position_ver_mb }}%;
                    --font-weight: {{block.settings.heading_weight}};
                    --font_style: {{block.settings.font_style}};
                    --font-size: {{ block.settings.heading_size }}px;
                    --font-size-mb: {{ block.settings.heading_size_mb }}px;
                  ">
                    <span>{{ block.settings.heading}}</span>
                  </h3>
                {%- endif -%}
                {%- when 'link' -%}
                  {%- if block.settings.link_url!= blank %}
                    <a href="{{ block.settings.link_url }}" class="block-link" target="_blank"
                    style="
                      --color: {{ block.settings.link_color }};
                      --position-hoz: {{ block.settings.content_position_hoz }}%;
                      --position-ver: {{ block.settings.content_position_ver }}%;
                      --position-hoz-mb: {{ block.settings.content_position_hoz_mb }}%;
                      --position-ver-mb: {{ block.settings.content_position_ver_mb }}%;
                      --font-weight: {{block.settings.link_weight}};
                      --font_style: {{block.settings.font_style}};
                      --font-size: {{ block.settings.link_size }}px;
                      --font-size-mb: {{ block.settings.link_size_mb }}px;
                    ">
                      
                      <span class="text">{{ block.settings.link_text }}</span>
                      {% render 'icon' with 'arrow-right' %}
                    </a>
                  {%- endif %}
                {%- when 'link_list'-%}
                  {%- if block.settings.menu != blank -%}
                    <ul class="block-link_list list-unstyled"
                    style="
                      --color: {{ block.settings.link_list_color }};
                      --position-hoz: {{ block.settings.content_position_hoz }}%;
                      --position-ver: {{ block.settings.content_position_ver }}%;
                      --position-hoz-mb: {{ block.settings.content_position_ver_mb }}%;
                      --position-ver-mb: {{ block.settings.content_position_hoz_mb }}%;
                      --font-weight: {{block.settings.link_list_weight}};
                      --font_style: {{block.settings.font_style}};
                      --font-size: {{ block.settings.link_list_size }}px;
                      --font-size-mb: {{ block.settings.link_list_size_mb }}px;
                    ">
                      {%- for link in block.settings.menu.links -%}
                        <li>
                          <a
                            href="{{ link.url }}"
                            class="link link--text list-menu__item list-menu__item--link"
                          >
                            <span class="text">
                              {{ link.title }}
                              {% render 'icon' with 'arrow-right' %}
                            </span>
                            
                          </a>
                        </li>
                      {%- endfor -%}
                    </ul>
                  {%- endif -%}
            {%- endcase -%}
          {%- endfor -%}
        </div>
      {%- endif -%}
      <div class="section-content {{ section.settings.text_alignment }} {{ section.settings.text_alignment_mb }}-mb"
      style="
            --position-hoz: {{ section.settings.content_position_hoz }}%;
            --position-ver: {{ section.settings.content_position_ver }}%;
            --position-hoz-mb: {{ section.settings.content_position_hoz_mb }}%;
            --position-ver-mb: {{ section.settings.content_position_ver_mb }}%;
        "
      >
        <div class="section-content-wrapper{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          {% if settings.animations_reveal_on_scroll %}
            data-cascade
          {% endif %}
          >
          {%- if  section.settings.heading != blank -%}
            <h2 class="heading inline-richtext">
              {{ section.settings.heading }}
            </h2>
          {%- endif -%}
          {%- if  section.settings.content != blank -%}
            <div class="desc rte">
              {{ section.settings.content }}
            </div>
          {%- endif -%}
          {%- if  section.settings.button_label_1 != blank or section.settings.button_label_2 != blank or section.settings.button_label_3 != blank-%}
            <div class="banner__buttons d-flex wrap j-c--center a-i--center gap-20">
              
              {%- if section.settings.button_label_1 != blank -%}
                <a
                  {% if section.settings.button_link_1 == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ section.settings.button_link_1 }}"
                  {% endif %}
                  class="button"
                >
                  {{- section.settings.button_label_1 -}}
                </a>
              {%- endif -%}
              {%- if section.settings.button_label_2 != blank -%}
                <a
                  {% if section.settings.button_link_2 == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ section.settings.button_link_2 }}"
                  {% endif %}
                  class="button"
                >
                  {{- section.settings.button_label_2 -}}
                </a>
              {%- endif -%}
              {%- if section.settings.button_label_3 != blank -%}
                <a
                  {% if section.settings.button_link_3 == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ section.settings.button_link_3 }}"
                  {% endif %}
                  class="button"
                >
                  {{- section.settings.button_label_3 -}}
                </a>
              {%- endif -%}
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>


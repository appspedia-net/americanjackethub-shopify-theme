    },
    {
        "type": "range",
        "id": "content_position_hoz_mb",
        "label": "Content position horizontal mobile",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 50,
        "unit": "%"
    },
    {
        "type": "select",
        "id": "text_alignment",
        "options": [
        {
            "value": "left",

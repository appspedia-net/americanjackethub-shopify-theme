{{ 'section-team.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mb }}px;
    padding-bottom: {{ section.settings.padding_bottom_mb }}px;
  }
  .section-{{ section.id }}-padding .title-wrapper-with-link{
    margin-bottom: {{section.settings.margin_mb}}px;
  }
  .section-{{ section.id }}-padding .title-wrapper-with-link h2 {
    font-size: {{ section.settings.heading_size_mb }}px;
    width: 100%;
  }
  .section-{{ section.id }}-padding .brand-card__info .heading,
  .section-{{ section.id }}-padding .brand-card__text a {
    font-size: {{ section.settings.heading_size_mb_block }}px;
    color: {{ section.settings.color_icon }};
  }
  .section-{{ section.id }}-padding .brand-card__info .sub_heading {
    font-size: {{ section.settings.subheading_size_mb_block }}px;
    color: {{ section.settings.color_text }};
  }

  .section-{{ section.id }}-padding .about-statistical .brand-card__info .heading:before {
    font-size: {{ section.settings.count_size_mb | times: 0.8 }};
  }

  .section-{{ section.id }}-padding .team--item.member:after {
    background-color: rgb({{ section.settings.background_color.red }},{{ section.settings.background_color.green }},{{ section.settings.background_color.blue }},80%);
    color: {{ section.settings.color_icon }};
  }
  @media screen and (max-width:1024px){
    .section-{{ section.id }}-padding .team__wrapper .brand-card__info{
      background-color: rgb({{ section.settings.background_color.red }},{{ section.settings.background_color.green }},{{ section.settings.background_color.blue }},80%);
    }
  }
  
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .section-{{ section.id }}-padding .title-wrapper-with-link h2 {
      font-size: {{ section.settings.heading_size }}px;
    }
    .section-{{ section.id }}-padding .brand-card__info .heading,
    .section-{{ section.id }}-padding .brand-card__text a {
      font-size: {{ section.settings.heading_size_block }}px;
    }
    .section-{{ section.id }}-padding .brand-card__info .sub_heading {
      font-size: {{ section.settings.subheading_size_block }}px;
    }
    .section-{{ section.id }}-padding .brand-card__info .heading:before {
      font-size: {{ section.settings.count_size_mb | times: 0.8 }};
    }
    .section-{{ section.id }}-padding .title-wrapper-with-link{
      margin-bottom: {{section.settings.margin}}px;
    }
  }
{%- endstyle -%}

<div class="teams-member color-{{ section.settings.color_scheme }}{% if section.settings.title == blank %} no-heading{% endif %}">
  <div
    class="page-width section-{{section.settings.layout}} section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    {% if settings.animations_reveal_on_scroll %}
      data-cascade
    {% endif %}
  >
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper-with-link title-wrapper--no-top-margin {{ section.settings.text_align }}">
        <h2 class="heading title inline-richtext{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          {{ section.settings.title }}
        </h2>
        {%- if section.settings.sub_heading != blank -%}
          <div class="info subtitle{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
            {{ section.settings.sub_heading }}
          </div>
        {%- endif -%}
      </div>
    {%- endunless -%}
    {%- if section.blocks.size > 0 -%}
        <div class="team__wrapper">
            <div class="team__lists grid grid--{{ section.settings.columns_mobile }}-col-tablet-down grid--{{ section.settings.columns_desktop }}-col-desktop"
              style="--grid-desktop-horizontal-spacing: {{ section.settings.column_gap }}px;
              --grid-desktop-vertical-spacing: 36px"
            >
                {%- for block in section.blocks -%}
                  {%- case block.type -%}
                  {%- when 'member' -%}
                  <div class="team--item {{block.type}} grid__item">
                    <div
                      class="image-team {% if block.settings.image != blank %} media{% else %} image--placeholder placeholder{% endif %}"
                      {% if block.settings.image != blank %}
                        style="padding-bottom: {{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100 }}%;"
                      {% endif %}
                    >
                      {%- if block.settings.image != blank -%}
                        {%- capture sizes -%}
                          (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
                          (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
                        {%- endcapture -%}
                        {{
                          block.settings.image
                          | image_url: width: 1500
                          | image_tag: sizes: sizes, widths: '165, 360, 535, 750, 1070, 1500'
                        }}
                      {%- else -%}
                        {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                      {%- endif -%}
                    </div>
                    <div class="brand-card__info">
                      {%- if block.settings.heading != blank -%}
                      <div class="heading">
                        {{ block.settings.heading }}
                      </div>
                      {%- endif -%}
                      {%- if block.settings.sub_heading != blank -%}
                      <div class="sub_heading">
                        {{ block.settings.sub_heading }}
                      </div>
                      {%- endif -%}
                      {%- if block.settings.instagram != blank or
                        block.settings.x_twitter != blank or
                        block.settings.facebook != blank or
                        block.settings.twitter != blank
                      -%}
                        <div class="social-team">
                            {%- if block.settings.instagram != blank -%}
                                <a href="{{ block.settings.instagram }}" class="social-link">
                                    <svg width="19" height="19" viewBox="0 0 19 19" fill="none" xmlns="http://www.w3.org/2000/svg">
